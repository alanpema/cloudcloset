<%= simple_form_for(User.new, as: :user, url: session_path(:user)) do |f| %>
  <div class="form-inputs text-black">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
  </div>
  <div class="form-actions d-flex justify-content-center">
    <%= f.button :submit, "Log in", class:"btn btn-lg btn-primary shadow m-3 text-white"%>
  </div>
<% end %>
