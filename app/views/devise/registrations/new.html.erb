<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :photo, as: :file %>
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first_name" },
                placeholder: "Sponge"%>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last_name" },
                placeholder: "Bob"%>
    <%= f.input :phone_number,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "phone" },
                placeholder: "0123456789"%>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                placeholder: "sponge@bob.tech"%>
    <%= f.input :location,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "location" },
                placeholder: "Bikini Bottom"%>
    <%= f.input :role, as: :select, collection: User::ROLES, label:"Owner/Host" %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, link_to "Register", dashboard_path %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
