<div class="container my-4">
  <div class="row d-flex justify-content-center">
    <div class="col-6 bg-white p-4 shadow">
        <%= simple_form_for(@closet) do |f| %>
          <%= f.input :photo, as: :file, label: "Building picture ðŸ“·" %>
          <%= f.input :name, label: "Name your closet" %>
          <%= f.input :location,
            input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
            wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}},label:"Pick up location ðŸ“" %>
          <%= f.input :features, label: "Describe your closet's space" %>
          <%= f.input :accessibility, label: "How easy is your closet to reach?(floor, doors space, etc)" %>
          <%= f.input :state, label: "Tell us about the room where items will be stored " %>
          <%= f.button :submit, "Edit my info", class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>
