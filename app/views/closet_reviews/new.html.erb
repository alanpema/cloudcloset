<h1>closet review</h1>
<div class="container my-4">
  <div class="row d-flex justify-content-center">
    <div class="col-6 bg-white p-4 shadow">
        <%= simple_form_for([@closet, @closet_review]) do |f| %>
          <%= f.input :comment, label:"Leave a comment" %>
          <%= f.input :rating, as: :range, class:"form-range", label:"Rate your experience" %>
          <%= f.submit class: "btn btn-outline-danger" %>
        <% end %>
    </div>
  </div>
</div>
