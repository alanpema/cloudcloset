<% if user_signed_in? %>
  <div class="navbar navbar-expand-sm navbar-danger navbar-lewagon d-flex justify-content-between border-1 border-bottom border-primary">
    <div class="navlogo">
      <%= image_tag("cloudcloset.png", alt: "cloudcloset") %>
    </div>
    <div class="mx-2 ">
      <a href="#" class="avatar text-decoration-none" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <% if current_user.photo.attached? %>
          <h4 class="user-avatar text-primary text-capitalize mt-3 text-decoration-none" id="nombre">
            <strong><%= current_user.first_name %></strong>  <%=cl_image_tag current_user.photo.key, alt: "dropdown menu" %>
          <h4>
        <% else %>
          <h2 class="user-avatar text-primary text-capitalize mt-3 text-decoration-none">
          <strong><%= current_user.first_name %></strong>  <img src="https://gopostr.s3.amazonaws.com/favicon_url/bvnowNkxrBEJWo1QyPAeSz0vDNa8hajfTgPKTP7m.png" class="avatar" alt="dropdown menu">
          <h2>
        <% end %>
        <div class="dropdown-menu dropdown-menu-end mt-2" aria-labelledby="navbarDropdown">
          <% unless current_page?(dashboard_path) %>
            <%= link_to "Profile", dashboard_path, class: "dropdown-item text-primary" %>
          <% end %>
          <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item text-danger mt-2 mb-2" %>
        </div>
      </a>
    </div>
  </div>
<% end %>
