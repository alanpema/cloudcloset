<div data-search-items-target="list">
  <p class="h3">
    <% if params[:query].blank? %>
      <%= pluralize current_user.not_booked_items.count, "item" %> available
    <% else %>
      <%= pluralize items.count, "result" %> for <code><%= params[:query] %></code>
    <% end %>
  </p>

  <div data-controller="items">
    <h1>Select all |<input type="checkbox" data-action="change->items#toggleAll">|</h1>
    <div class="items">
      <% current_user.not_booked_items.each do |item| %>
        <%= render "items/item_infos", item: item %>
      <% end %>
    </div>
  </div>
</div>
