          <h5>One <strong>box</strong> one <strong>dollar</strong> one <strong>day</strong></h5>
        </div>
        <% if user_signed_in? %>

        <% end %>
      </div>
    </div>
  </div>


  <div class="comparacion d-flex justify-content-center flex-column align-items-center">
    <h1 class="text-black m-4"><strong>Start saving now!</strong></h1>
    <%= image_tag("comparacion.png", alt: "comparacion", class:"shadow") %>
  </div>

  <div class="precios d-flex justify-content-center flex-column align-items-center">
    <h1 class="text-black m-4"><strong>Daily prices (USD$) </strong></h1>
    <%= image_tag("precio.png", alt: "precios", class:"shadow") %>
  </div>
